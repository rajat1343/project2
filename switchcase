package project3;
import java.util.Scanner;



public class Project3 {

    
    public static void main(String[] args) {
        int choice;
        System.out.println("PICK 1 : APPLE    2. ORANGE      3. BANANA      ");
        Scanner sc = new Scanner(System.in);
        choice = sc.nextInt();
        switch(choice) 
        {
            case 1 : System.out.println(" You choosed apple ");
            break;
            case 2 : System.out.println(" You choosed orange");
            break;
            case 3 : System.out.println(" You choosed banana");
            break;
            default : System.out.println("Invalid ");
        }
    }
    
}
